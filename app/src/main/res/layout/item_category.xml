<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_bottom_nav_btn"
    android:clickable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_bottom_nav_btn"
    app:cardElevation="@dimen/layout_height_full_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_vertical_nav_btn"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_image_item"
            android:contentDescription="@string/iv_header_categories_description"
            android:scaleType="centerCrop"
            android:src="@drawable/burger" />

        <TextView
            style="@style/StyleTitle20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_bottom_nav_btn"
            android:text="category" />

        <TextView
            style="@style/StyleDescription12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/margin_bottom_nav_btn"
            android:text="jdkl fkgt dkdlflr sks fjg wlelgjg lsfg,sgj" />
    </LinearLayout>
</androidx.cardview.widget.CardView>


